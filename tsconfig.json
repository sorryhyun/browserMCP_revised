{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/*": ["./stubs/@repo/*"],
      "@r2r/*": ["./stubs/@r2r/*"]
    }
  },
  "include": ["src/**/*.ts", "stubs/**/*.ts"],
  "exclude": ["node_modules"]
}
